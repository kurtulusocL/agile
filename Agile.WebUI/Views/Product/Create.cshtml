@model Product
@{
    ViewData["Title"] = "Add A New Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <h1>@ViewData["Title"]</h1>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <span>Product Name</span>
                        <input asp-for="Name" name="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <span>Product Price</span>
                        <input asp-for="Price" name="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <span>Product Quantity</span>
                        <input asp-for="Quantity" name="Quantity" type="number" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <span>Product Descripton</span>
                        <input asp-for="Description" name="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Create Product" class="btn btn-primary" />
                        <input type="hidden" asp-for="CompanyId" />
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            @if (TempData["successCreated"] != null)
            {
                <strong>@TempData["successCreated"]</strong>
            }
            else
            {
                <strong>@TempData["errorCreated"]</strong>
            }
        </div>
    </div>
    <hr />
    <div>
        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-dark">Back to Product List</a>
    </div>
</div>