@model Order
@{
    ViewData["Title"] = "Order Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <h3>@ViewData["Title"]</h3>
        <hr />
        <div>
            <dl class="row">               
                <dt class="col-sm-2">
                    Created Date
                </dt>
                <dd class="col-sm-10">
                   @Model.CreatedDate.ToShortDateString()
                </dd>
                <dt class="col-sm-2">
                    Updated Date
                </dt>
                <dd class="col-sm-10">
                    @if (Model.UpdatedDate != null)
                    {
                        @Model.UpdatedDate.Value.ToShortDateString()
                    }
                    else
                    {
                        <span>-</span>
                    }
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-success btn-sm">Edit</a> |
            <a asp-action="Index" class="btn btn-outline-dark btn-sm">Back to Order List</a>
        </div>
    </div>
</div>