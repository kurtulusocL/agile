@model SendMail
@{
    ViewData["Title"] = "Email Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <h3>@ViewData["Title"]</h3>
        <hr />
        <div>
            <dl class="row">                
                <dt class="col-sm-2">
                    Mail Subject
                </dt>
                <dd class="col-sm-10">
                    @Model.Subject
                </dd>
                <dt class="col-sm-2">
                    Mail Text
                </dt>
                <dd class="col-sm-10">
                    @Model.MailText
                </dd>
                <dt class="col-sm-2">
                    Send Date
                </dt>
                <dd class="col-sm-10">
                    @Model.CreatedDate.ToShortDateString()
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-success btn-sm">Edit</a> |
            <a asp-action="Index" class="btn btn-outline-dark btn-sm">Back to Mail List</a>
        </div>
    </div>
</div>