@model Customer
@{
    ViewData["Title"] = "Update Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <h1>@ViewData["Title"]</h1>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <span>Name Surname</span>
                        <input asp-for="NameSurname" name="NameSurname" class="form-control" />
                        <span asp-validation-for="NameSurname" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <span>Email Address</span>
                        <input asp-for="Email" name="Email" class="form-control" type="email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <span>Phone Number</span>
                        <input asp-for="PhoneNumber" name="PhoneNumber" type="number" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Update Customer" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
        <div class="row">
            @if (TempData["successCreated"] != null)
            {
                <strong>@TempData["successCreated"]</strong>
            }
            else
            {
                <strong>@TempData["errorCreated"]</strong>
            }
        </div>
    </div>
    <hr />
    <div>
        <a asp-controller="Customer" asp-action="Index" class="btn btn-outline-dark">Back to Customer List</a>
    </div>
</div>