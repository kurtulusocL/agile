@model Company
@{
    ViewData["Title"] = "Add A New Company";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <h1>@ViewData["Title"]</h1>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <span>Company Name</span>                      
                        <input asp-for="Name" name="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>                                  
                </form>
            </div>
        </div>
        <div class="row">
            @if (TempData["successCreated"] != null)
            {
                <strong>@TempData["successCreated"]</strong>
            }
            else
            {
                <strong>@TempData["errorCreated"]</strong>
            }
        </div>
    </div>
    <hr />
    <div>
        <a asp-controller="Company" asp-action="Index" class="btn btn-outline-dark">Back to Company List</a>
    </div>
</div>